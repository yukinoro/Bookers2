

<div class='body'>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <h1>error</h1>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
      <div class='container'>

        <p id="notice"></p>
<div class='row'>
  <div class='col-xs-3'>
         <h2>User info</h2>
    <table class='table'>
       <tr>
         <th><%= attachment_image_tag @user, :profile_image , :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb " %></th>
       </tr>
      <tr>
        <th><%= "name" %></th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th><%= "introduction" %></th>
        <th><%= @user.introduction %></th>
      </tr>
</table>
      <div class='row'>
        <%= link_to "", edit_user_path(@user), class: "btn btn-default glyphicon glyphicon-wrench col-xs-12" %>
      </div>
    <h1>New Book</h1>
<!-- form_for部分 -->
    <%= form_for(@book) do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>
        <h4>opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create book' %>
    <% end %>
  </div>

  <div class='col-xs-9'>
    <h2>Books</h2>

  <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image , :fill, 30, 30, fallback: "no_image.jpg", size:'30x30' , class: "img-circle pull-left profile-thumb" %></td>

          <td><%= link_to "#{book.title}",book_path(book)%></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
  </tbody>
  </table>
</div>

  
</div>

    <footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
