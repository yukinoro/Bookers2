<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <h1>error</h1>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <p><%= f.submit 'Update Book' %></p>
    <p><%= link_to "show", book_path(@book) %>
	<a>|</a>
	<%= link_to "back", books_path(@book), class:"back" %></p>
<% end %>