<html>
<body>
  <div class='body'>
      <div class='container'>
          <div class='row'>
              <div class='col-xs-3'>
              <h2>User info</h2>
               <table class='table'>
                 <tr>
                   <th><%= attachment_image_tag @user, :profile_image , :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></th>
                 </tr>
                <tr>
                  <th><%= "name" %></th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th><%= "introduction" %></th>
                  <th><%= @user.introduction %></th>
                </tr>
               </table>
               <% if @user.id == current_user.id %>
                 <div class='row'>
        <%= link_to "", edit_user_path(@user), class: "btn btn-default glyphicon glyphicon-wrench col-xs-12" %>
      </div>
                <% end %>


              <h1>New Book</h1>
              <%= form_for(@book) do |f| %>
              <h4>title</h4>
              <%= f.text_field :title %>
              <h4>opinion</h4>
              <%= f.text_area :body %>
              <%= f.submit 'Create book' %>
              <% end %>
            </div>
            <div class='col-xs-9'>
              <h2>Users</h2>
              <table class='table table-hover table-inverse'>
              <thead>
                <tr> 
                <th>image</th>
                <th>name</th>
                <th colspan="2"></th>
                </tr>
              </thead>
              <tbody>
                  <% @users.each do |user| %>
                  <tr>
                    <td><%= attachment_image_tag user, :profile_image , :fill, 30, 30, fallback: "no_image.jpg", size:'30x30' , class: "img-circle pull-left profile-thumb" %></td>
                    <td><%= user.name %></td>
                      <td>
                      <%= link_to "show", user_path(user),class: "show_#{user.id}" %>
                    </td>
                  </tr>
                  <% end %>
              </tbody>
              </table>
            </div>
        </div>
    </div>
  </div>
</body>


<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>


  </body>
</html>
